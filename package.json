{
  "name": "dogule1",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "dev": "vite dev",
    "lint": "echo \"DLX-LINT-001: running eslint\" && eslint .",
    "format": "echo \"DLX-FMT-001: running prettier\" && prettier --write .",
    "build": "vite build",
    "test": "vitest",
    "audit": "echo \"DLX-AUDIT-001: running pnpm audit\" && pnpm audit",
    "prepare": "echo \"DLX-HUSKY-000: installing husky hooks\" && husky install",
    "lint-staged": "echo \"DLX-LS-001: running lint-staged\" && lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.12",
    "happy-dom": "^20.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "echo \"DLX-LS-JS-001: eslint --fix on staged js/ts\"",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "echo \"DLX-LS-DOC-001: prettier on staged non-code\"",
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "js-yaml": "^4.1.1"
    }
  }
}
